pipeline {
    agent {
        docker {
            image 'python:3.9-slim'
        }
    }

    stages {

        stage('Install Dependencies') {
            steps {
                sh 'pip install --upgrade pip'
                sh 'pip install -r app/requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest'
            }
        }
    }

    post {
        success {
            echo 'ğŸ‰ BUILD SUCCESS â€” TESTS PASSED'
        }
        failure {
            echo 'âŒ BUILD FAILED'
        }
    }
}
