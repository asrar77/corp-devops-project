pipeline {
    agent {
        docker {
            image 'python:3.10'
        }
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'âœ… Checking out code...'
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing dependencies...'
                sh 'pip install -r app/requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh 'pytest tests/'
            }
        }
    }

    post {
        success {
            echo 'ğŸ‰ PIPELINE SUCCESS'
        }
        failure {
            echo 'âŒ PIPELINE FAILED'
        }
    }
}
