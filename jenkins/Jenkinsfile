pipeline {
    agent any  // Run on any available Jenkins node

    environment {
        VENV_DIR = "${WORKSPACE}/venv"
        PYTHONPATH = "${WORKSPACE}"
    }

    stages {

        stage('Declarative: Checkout SCM') {
            steps {
                // Checkout your Git repository
                checkout scm
            }
        }

        stage('Checkout Code') {
            steps {
                echo 'Checking out code...'
                // Ensure we are in the right workspace
                sh 'pwd'
                sh 'ls -l'
            }
        }

        stage('Setup Python venv') {
            steps {
                echo 'Setting up Python virtual environment...'
                sh '''
                # Install Python3 and pip if not already installed (Ubuntu/Debian)
                sudo apt-get update
                sudo apt-get install -y python3 python3-venv python3-pip

                # Create virtual environment
                python3 -m venv ${VENV_DIR}

                # Activate and upgrade pip
                . ${VENV_DIR}/bin/activate
                pip install --upgrade pip
                pip install -r app/requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running tests...'
                sh '''
                # Activate virtualenv
                . ${VENV_DIR}/bin/activate

                # Export PYTHONPATH so Python can find app module
                export PYTHONPATH=$WORKSPACE

                # Run pytest on tests folder
                pytest tests
                '''
            }
        }
    }

    post {
        success {
            echo '‚úÖ PIPELINE SUCCESSFUL'
        }
        failure {
            echo '‚ùå PIPELINE FAILED'
        }
        always {
            echo 'üì¶ Cleaning up workspace if needed'
        }
    }
}
