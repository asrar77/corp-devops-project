pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Python & Dependencies') {
            steps {
                sh '''
                apt-get update
                apt-get install -y python3 python3-pip
                pip3 install -r app/requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest tests'
            }
        }
    }

    post {
        success {
            echo 'üéâ BUILD SUCCESS'
        }
        failure {
            echo '‚ùå BUILD FAILED'
        }
    }
}
