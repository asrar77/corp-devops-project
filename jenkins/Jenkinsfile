pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Setup Python venv') {
            steps {
                sh '''
                apt-get update
                apt-get install -y python3 python3-venv python3-pip

                python3 -m venv venv
                . venv/bin/activate

                pip install --upgrade pip
                pip install -r app/requirements.txt
                '''
            }
        }
        stage('Run Tests') {
    steps {
        sh '''
        . venv/bin/activate
        export PYTHONPATH=$WORKSPACE
        pytest tests
        '''
    }
}
        
    }

    post {
        success {
            echo 'üéâ BUILD SUCCESS'
        }
        failure {
            echo '‚ùå BUILD FAILED'
        }
    }
}
