pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git 'https://github.com/asrar77/corp-devops-project.git'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'python -m pytest tests/'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t mirasrar007/corp-app:latest -f docker/Dockerfile .'
            }
        }

        stage('Push to DockerHub') {
            steps {
                sh 'docker push mirasrar007/corp-app:latest'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f k8s/'
            }
        }
    }
}
